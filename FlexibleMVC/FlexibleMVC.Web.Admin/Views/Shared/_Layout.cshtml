<!DOCTYPE html>
<html>
	<head>
		<title>@ViewBag.Title</title>
		<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css">
		<script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
	</head>
	<body>
		<div id="page">
			<header>
				<div id="title">
                    <h1>ASP.NET MVC Application 来自Admin</h1>
				</div>
			</header>
			<nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.RouteLink("Home", "Admin_Default", new { controller = "Home", action = "Index" })</li>
                    <li>@Html.RouteLink("Contact", "Admin_Default", new { controller = "Home", action = "Contact" })</li>
                    <li><a href="/admin_home/Index">Home</a></li>
                    <li><a href="/admin_home/Contact">Contact</a></li>
                </ul>
			</nav>
			<section id="main">
				@RenderBody()
			</section>
		</div>
	</body>
</html>
