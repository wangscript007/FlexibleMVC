@{
    Layout = null;
    string miniui = LessConfig.MiniUI_Path;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <title>菜单管理</title>

    <link href="@Url.Content(@miniui + "demo/demo.css")" rel="stylesheet" type="text/css" />
    <style type="text/css">
        body {
            margin: 0;
            padding: 0;
            border: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }
    </style>

    <script src="@Url.Content(@miniui + "scripts/boot.js")" type="text/javascript"></script>

    <!--引入皮肤样式-->
    <!--<link href="../../scripts/miniui/themes/blue/skin.css" rel="stylesheet" type="text/css" />-->

</head>
<body>


    <div class="mini-splitter" style="width:100%;height:100%;">
        <div size="240" showCollapseButton="true">
            <div class="mini-toolbar" style="padding:2px;border-top:0;border-left:0;border-right:0;">
                @*<span style="padding-left:5px;">名称：</span>
                <input class="mini-textbox" width="120" />*@
                <a class="mini-button" iconCls="icon-refresh" plain="true" onclick="refreshTree()">刷新</a>
            </div>
            <div class="mini-fit">
                <ul id="tree1" class="mini-tree" url="../bjdc_system_MealSchedule/GetWeekTree" style="width:100%;"
                    showTreeIcon="true" textField="text" idField="id" parentField="pid" resultAsTree="false" expandOnLoad="true"></ul>
            </div>
        </div>
        <div showCollapseButton="true">
            <div class="mini-toolbar" style="padding:2px;border-top:0;border-left:0;border-right:0;">

                <a id="btnNew" class="mini-button" iconCls="icon-add" plain="true" onclick="addRow()" enabled="false">新增</a>
                <a class="mini-button" iconCls="icon-remove" plain="true" onclick="removeRow()">删除</a>
                <span class="separator"></span>
                <a class="mini-button" iconCls="icon-save" plain="true" onclick="saveData()">保存</a>
            </div>
            <div class="mini-fit">
                <div id="treegrid1" class="mini-treegrid" style="width: 100%; height: 100%;"     
                     url="../bjdc_system_MealMenu/GetMenuTreeList" showTreeIcon="true" 
                     treeColumn="CategoryName" idField="ItemID" parentField="ParentItemID" resultAsTree="false"
                     showCheckBox="true" checkRecursive="true" expandOnLoad="true" checkOnTextClick="true" ondrawnode="ondrawnode" autoLoad="false"
                >
                    <div property="columns">
                        <div type="indexcolumn"></div>
                        <div name="CategoryName" field="ItemName" width="200">菜品名称</div>
                        <div field="SalePrice" width="100">价格（元）</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        mini.parse();

        var tree = mini.get("tree1");
        var treegrid1 = mini.get("treegrid1");

        var btnNew = mini.get("btnNew");

        function refreshTree() {
            tree.reload();
        }

        tree.on("nodeclick",
            function(e) {

                if (e.isLeaf) {
                    treegrid1.load({ CategoryID: e.node.id });
                    btnNew.setEnabled(true);
                } else {
                    treegrid1.setData([]);
                    treegrid1.setTotalCount(0);
                    btnNew.setEnabled(false);
                }
            });

        //////////////////////////////////////////////
        function onNameFilterChanged(e) {
            var textbox = e.sender;
            var key = textbox.getValue();

            var node = tree.getSelectedNode();
            if (node) {
                treegrid1.load({ CategoryID: node.id, SaleName: key });
            }
        }

        function addRow() {
            var node = tree.getSelectedNode();
            if (node) {
                var newRow = { name: "New Row" };
                newRow.CategoryID = node.id;
                treegrid1.addRow(newRow, 0);
            }
        }

        function removeRow() {
            var rows = treegrid1.getSelecteds();
            if (rows.length > 0) {
                treegrid1.removeRows(rows, true);
            }
        }

        function saveData() {
            var data = treegrid1.getChanges();
            var json = mini.encode(data);
            treegrid1.loading("保存中，请稍后......");
            $.ajax({
                url: "bjdc_system_mealmenu/SaveMenu",
                data: { data: json },
                type: "post",
                success: function(text) {
                    treegrid1.reload();
                },
                error: function(jqXHR, textStatus, errorThrown) {
                    alert(jqXHR.responseText);
                }
            });
        }

        function ondrawnode(e) {
            //debugger;
            //var tree = e.sender,
            //    record = e.record,
            //    column = e.column,
            //    field = e.field,
            //    id = record[tree.getIdField()],
            //    funs = record.functions;

            //tree.checkNode(e.node);
        }

    </script>

</body>
</html>