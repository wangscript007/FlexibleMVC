@{
    Layout = null;
    string miniui = LessConfig.MiniUI_Path;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <title>菜单管理</title>

    <link href="@Url.Content(@miniui + "demo/demo.css")" rel="stylesheet" type="text/css" />
    <style type="text/css">
        body {
            margin: 0;
            padding: 0;
            border: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }
    </style>

    <script src="@Url.Content(@miniui + "scripts/boot.js")" type="text/javascript"></script>

    <!--引入皮肤样式-->
    <!--<link href="../../scripts/miniui/themes/blue/skin.css" rel="stylesheet" type="text/css" />-->

</head>
<body>


    <div class="mini-splitter" style="width:100%;height:100%;">
        <div size="240" showCollapseButton="true">
            <div class="mini-toolbar" style="padding:2px;border-top:0;border-left:0;border-right:0;">
                @*<span style="padding-left:5px;">名称：</span>
                <input class="mini-textbox" width="120" />*@
                <a class="mini-button" iconCls="icon-refresh" plain="true" onclick="refreshTree()">刷新</a>
            </div>
            <div class="mini-fit">
                <ul id="tree1" class="mini-tree" url="bjdc_system_MealCategory/GetMealMenuTree" style="width:100%;"
                    showTreeIcon="true" textField="text" idField="id" parentField="pid" resultAsTree="false" expandOnLoad="true"></ul>
            </div>
        </div>
        <div showCollapseButton="true">
            <div class="mini-toolbar" style="padding:2px;border-top:0;border-left:0;border-right:0;">

                <a id="btnNew" class="mini-button" iconCls="icon-add" plain="true" onclick="addRow()" enabled="false">新增</a>
                <a class="mini-button" iconCls="icon-remove" plain="true" onclick="removeRow()">删除</a>
                <span class="separator"></span>
                <a class="mini-button" iconCls="icon-save" plain="true" onclick="saveData()">保存</a>
            </div>
            <div class="mini-fit">
                <div id="grid1" class="mini-datagrid" style="width:100%;height:100%;"
                     borderStyle="border:0;"
                     url="bjdc_system_mealmenu/GetMenuList"
                     showFilterRow="true" allowCellSelect="true" allowCellEdit="true" pageSize="30" multiSelect="true">
                    <div property="columns">
                        <div type="indexcolumn"></div>
                        <div type="checkcolumn"></div>
                        <div field="SaleName" width="120" headerAlign="center" allowSort="false">
                            菜品名称
                            <input property="editor" class="mini-textbox" style="width: 100%;"/>
                            <input id="nameFilter" property="filter" class="mini-textbox" onvaluechanged="onNameFilterChanged" style="width: 100%;" emptyText="输入菜品名称敲回车键检索" />
                        </div>
                        <div field="SalePrice" width="120" headerAlign="center" allowSort="false">
                            价格（元）
                            <input property="editor" class="mini-spinner" style="width: 100%;"  minValue="0" maxValue="10000" />
                        </div>
                        <div field="SortNo" width="100" allowSort="false" align="center" headerAlign="center">
                            排序
                            <input property="editor" class="mini-spinner" minValue="0" maxValue="10000" value="25" style="width: 100%;"/>
                        </div>
                        <div field="CreateTime" width="100" headerAlign="center" dateFormat="yyyy-MM-dd HH:mm:ss" allowSort="false">创建时间</div>
                        <div field="UpdateTime" width="100" headerAlign="center" dateFormat="yyyy-MM-dd HH:mm:ss" allowSort="false">修改时间</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        mini.parse();

        var tree = mini.get("tree1");
        var grid = mini.get("grid1");

        var btnNew = mini.get("btnNew");

        function refreshTree() {
            tree.reload();
        }

        tree.on("nodeclick", function (e) {

            if (e.isLeaf) {
                grid.load({ CategoryID: e.node.id });
                btnNew.setEnabled(true);
            } else {
                grid.setData([]);
                grid.setTotalCount(0);
                btnNew.setEnabled(false);
            }
        });
        //////////////////////////////////////////////
        function onNameFilterChanged(e) {
            var textbox = e.sender;
            var key = textbox.getValue();

            var node = tree.getSelectedNode();
            if (node) {
                grid.load({ CategoryID: node.id, SaleName: key });
            }
        }
        function addRow() {
            var node = tree.getSelectedNode();
            if (node) {
                var newRow = { name: "New Row" };
                newRow.CategoryID = node.id;
                grid.addRow(newRow, 0);
            }
        }
        function removeRow() {
            var rows = grid.getSelecteds();
            if (rows.length > 0) {
                grid.removeRows(rows, true);
            }
        }
        function saveData() {
            var data = grid.getChanges();
            var json = mini.encode(data);
            grid.loading("保存中，请稍后......");
            $.ajax({
                url: "bjdc_system_mealmenu/SaveMenu",
                data: { data: json },
                type: "post",
                success: function (text) {
                    grid.reload();
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert(jqXHR.responseText);
                }
            });
        }
    </script>

</body>
</html>